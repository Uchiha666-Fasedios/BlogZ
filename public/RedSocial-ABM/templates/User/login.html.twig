{% extends 'base.html.twig' %} {#heredo esta vista con sus blokes#}
{% block content %}

<div class="col-lg-4 box-form">
<h2>Identificarse</h2>
<hr/>

<form action="{{ path('login') }}" method="POST">{#login_check propia de symfony #}
        <label for="username">Email</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" /> {#last_username esta me muestra lo q se cargo ultimo por si hay algun error #}
         
        

        <label for="password">Contrase√±a:</label>
        <input type="password" id="password" name="_password" class="form-control" /> {#_password asi lo hace symfony#}
        
        
        
        <input type="submit" value="Entrar" class="btn btn-success"/>
        <input type="hidden" name="_target_path" value="/home" />{#esto para redirigir una vez se alla autenticado#}
    </form>

</div>
{% endblock %}